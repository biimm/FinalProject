
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gardients"
    tools:context=".Main3Activity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/choose_image_btn"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_toStartOf="@+id/capture_image_btn"
            android:layout_toLeftOf="@+id/capture_image_btn"
            android:background="#fff1eb"
            android:text="อัลบั้มภาพ"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:drawableLeft="@drawable/ic_collections"/>

        <Button
            android:id="@+id/capture_image_btn"
            android:layout_width="150dp"
            android:layout_height="46dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="340dp"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:background="#6a85b6"
            android:text="กล้องถ่ายรูป"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:drawableLeft="@drawable/ic_ad"
            />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="47dp"
            android:layout_height="44dp"
            android:background="#ace0f9" />


    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="1dp"
        android:background="#000" />


    <ImageView
        android:id="@+id/image_view"
        android:layout_width="328dp"
        android:layout_height="350dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_add_a_photo_black_24dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="342dp">

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="235dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="5dp" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="235dp"
            android:layout_height="45dp"
            android:layout_below="@+id/text1"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="6dp" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="235dp"
            android:layout_height="45dp"
            android:layout_below="@+id/text2"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="26dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="6dp" />

        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="61dp"
            android:layout_marginLeft="61dp"
            android:layout_marginEnd="72dp"
            android:layout_marginRight="72dp"
            android:layout_marginBottom="61dp"
            android:background="@drawable/round_bg"
            android:gravity="center"
            android:text="ถัดไป"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/edit1"
            android:layout_width="75dp"
            android:layout_height="33dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp"
            android:background="@drawable/edit_bg"
            android:text="เปลี่ยนสี"
            android:textColor="#fff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/edit2"
            android:layout_width="75dp"
            android:layout_height="33dp"
            android:layout_below="@+id/edit1"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/edit_bg"
            android:text="เปลี่ยนสี"
            android:textColor="#fff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/edit3"
            android:layout_width="75dp"
            android:layout_height="33dp"
            android:layout_below="@+id/edit2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/edit_bg"
            android:text="เปลี่ยนสี"
            android:textColor="#fff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBox"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="27dp"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="4dp"
              />

        <TextView
            android:id="@+id/text2"
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBox2"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="27dp"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="3dp"
              />

        <TextView
            android:id="@+id/text3"
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBox3"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="27dp"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="4dp"
              />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/save_button"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="7dp"
            android:text="เลือก/เปลี่ยนสีที่ต้องการจะจัดเก็บ"
            android:gravity="center_horizontal"
            android:textSize="18sp" />


    </RelativeLayout>

</LinearLayout>